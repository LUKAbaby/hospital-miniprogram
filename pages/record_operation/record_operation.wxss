/* pages/record_operation/record_operation.wxss */
Page{
  height: 100%;
}
#ct{
  width: 100%;
  height: 105vh;
  background-color: rgba(245, 245, 245,0.9); 
}
#ischild{
  width: 100%;
  height: 125vh;
  background-color: rgba(245, 245, 245,0.9);
}
.top{
  width: 100%;
  height: 270rpx;
  text-align: center;
  background-color: #a4e8ff;
  line-height: 150rpx;
  border-bottom: 10rpx dotted snow;
}
.top .crtime{
  display: block;
}
.main{
  width: 94%;
  border: 2rpx solid orange;
  border-radius: 10rpx;
  margin: 30rpx auto;
  background-color: #ffffff;
}
.main .info{
  width:100%;
  height: 80rpx;
  display: inline-flex;
  border-bottom: 5rpx dashed #dddddd;
  margin-top: 30rpx;
}
.btn{
  width: 94%;
  margin: 30rpx auto;
  /* border: 5rpx solid orange; */
}
.btn button{
  margin-left: 25rpx;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  z-index: 90;
  opacity: 0.7;
}
.dialog{
  width: 80%;
  position: fixed;
  top: 250rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  margin: 0 auto;
  z-index: 100;
  align-items: center;
}
.dialog input{
  border: 2rpx solid red;
  margin: 80rpx;
  background-color: rgba(190, 190, 190,0.7);
}