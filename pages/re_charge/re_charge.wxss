/* pages/re_charge/re_charge.wxss */
Page{
  height: 100%;
}
#ct{
  margin: 0;
  width: 100%;
  height: 100%; 
  overflow: hidden;
 background-color: rgba(244, 244, 244,0.9)
}
.top{
  width: 100%;
  height: 320rpx;
  background-color: #bebebe;
  line-height: 150rpx;
  padding-left: 100rpx;
}
.main{
  width: 100%;
  
  border: 10rpx solid whitesmoke;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  display: inline-flex;
  background-color: white;
}
.main input{
  width: 90%;
  height:220rpx;
  
}



.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  z-index: 90;
  opacity: 0.7;
}
.dialog{
  width: 80%;
  position: fixed;
  top: 250rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  margin: 0 auto;
  z-index: 100;
  align-items: center;
}
.dialog input{
  border: 2rpx solid red;
  margin: 80rpx;
  background-color: rgba(190, 190, 190,0.7);
}